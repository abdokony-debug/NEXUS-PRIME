async getReferralPlatforms() {
  try {
    if (!this.initialized) {
      await this.initialize();
    }
    
    const schema = require('../config/referral-sites-schema');
    const sheetName = schema.sheetName;
    
    // Ø¬Ù„Ø¨ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ù…Ù† Ø§Ù„ÙˆØ±Ù‚Ø©
    const sheet = this.doc.sheetsByTitle[sheetName];
    if (!sheet) {
      throw new Error(`Sheet "${sheetName}" not found`);
    }
    
    // ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ø®Ù„Ø§ÙŠØ§ ÙÙŠ Ø§Ù„Ù†Ø·Ø§Ù‚ Ø§Ù„Ù…Ø­Ø¯Ø¯
    await sheet.loadCells(schema.dataRange);
    
    const platforms = [];
    const [startRow, endRow] = this.parseRange(schema.dataRange);
    
    for (let row = startRow; row <= endRow; row++) {
      const platformCell = sheet.getCell(row, schema.columns.platform);
      const linkCell = sheet.getCell(row, schema.columns.link);
      const countCell = sheet.getCell(row, schema.columns.count);
      const statusCell = sheet.getCell(row, schema.columns.status);
      
      // Ø§Ù„ØªÙˆÙ‚Ù Ø¥Ø°Ø§ ÙƒØ§Ù† Ø§Ø³Ù… Ø§Ù„Ù…Ù†ØµØ© ÙØ§Ø±ØºØ§Ù‹
      if (!platformCell.value) break;
      
      platforms.push({
        platform: platformCell.value,
        link: linkCell.value,
        count: parseInt(countCell.value) || 0,
        status: statusCell.value || 'Pending',
        rowNumber: row + 1 // +1 Ù„Ø£Ù† Ø§Ù„ØµÙÙˆÙ ØªØ¨Ø¯Ø£ Ù…Ù† 1 ÙÙŠ Google Sheets
      });
    }
    
    logger.info(`ğŸ“Š Loaded ${platforms.length} referral platforms from sheet`);
    return platforms;
    
  } catch (error) {
    logger.error('Error loading referral platforms', error);
    return [];
  }
}
